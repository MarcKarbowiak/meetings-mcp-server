{
  "version": 1,
  "extractionRules": [
    {
      "type": "Decision",
      "confidence": "high",
      "patterns": ["^\\s*(decision|decided|we decided|final decision)\\s*[:\\-]"]
    },
    {
      "type": "ActionItem",
      "confidence": "high",
      "patterns": ["^\\s*(action item|ai|todo|to do|next step)\\s*[:\\-]"]
    },
    {
      "type": "OpenQuestion",
      "confidence": "high",
      "patterns": ["^\\s*(question|open question|unknown)\\s*[:\\-]"]
    },
    {
      "type": "Risk",
      "confidence": "medium",
      "patterns": ["^\\s*(risk|concern|blocker|issue)\\s*[:\\-]"]
    },
    {
      "type": "Dependency",
      "confidence": "medium",
      "patterns": ["^\\s*(dependency|depends on|waiting on)\\s*[:\\-]"]
    }
  ],
  "signals": [
    {
      "type": "Decision",
      "examples": ["Decision: we ship behind a feature flag", "Decided: keep tenant config in-repo for the demo"]
    },
    {
      "type": "ActionItem",
      "examples": ["Action item: Alice drafts the README by Friday", "TODO: Bob implements tenant resources"]
    },
    {
      "type": "OpenQuestion",
      "examples": ["Open question: do we need scenario outlines?", "Question: what is the tenantId source of truth?"]
    },
    {
      "type": "Risk",
      "examples": ["Risk: parsing fails on messy transcripts", "Concern: HTTP mode needs auth if exposed"]
    },
    {
      "type": "Dependency",
      "examples": ["Dependency: waiting on product glossary", "Depends on: transcript provider timestamps"]
    }
  ]
}
